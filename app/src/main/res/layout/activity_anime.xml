<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".generos.AnimeActivity"
    android:background="@drawable/new_background">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVoltarAnime"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:background="@drawable/seta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="7dp"
        android:iconifiedByDefault="false"
        android:queryHint="Pesquise um jogo"
        android:searchHintIcon="@drawable/ic_pesquisa"
        android:searchIcon="@drawable/ic_pesquisa" />

    <ListView
        android:id="@+id/listView"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchView"/>


</RelativeLayout>