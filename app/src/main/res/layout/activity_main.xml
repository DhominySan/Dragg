<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background">

    <!-- Seus elementos de layout aqui -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Conteúdo da Activity aqui -->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/voltar1"
            android:layout_width="58dp"
            android:layout_height="55dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="349dp"
            android:background="@drawable/seta" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="@string/baixe_um_papel_de_parede" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/zpeka" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/botaobackground3"
            android:id="@+id/btnDownload"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/baixar_imagem" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/zff" />
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/botaobackground3"
            android:id="@+id/btnDownload2"
            android:layout_gravity="center"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:text="@string/baixar_imagem" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/zzdyrroth" />
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/botaobackground3"
            android:id="@+id/btnDownload3"
            android:layout_gravity="center"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:text="@string/baixar_imagem" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/zvini" />
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/botaobackground3"
            android:id="@+id/btnDownload4"
            android:layout_gravity="center"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:text="@string/baixar_imagem" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="300dp"
            android:src="@drawable/ztanjiro" />
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/botaobackground3"
            android:id="@+id/btnDownload5"
            android:layout_gravity="center"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:text="@string/baixar_imagem" />

        <!-- Adicione mais elementos conforme necessário -->

    </LinearLayout>



</ScrollView>
