<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    tools:context=".OutrosActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVoltarOutros"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="349dp"
        android:background="@drawable/seta" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="16dp"
        android:src="@drawable/ic_perfi" />

    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="200dp"
        android:layout_below="@id/emailTextView"
        android:layout_height="200dp"
        android:src="@drawable/demail"
        android:layout_centerInParent="true" />


    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImageView"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:paddingTop="30dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        app:cornerRadius="10dp"
        android:layout_below="@+id/gifImageView"
        android:textSize="22sp"
        app:backgroundTint="@color/black"
        android:textColor="@color/fundo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="@string/deslogar" />
</RelativeLayout>
